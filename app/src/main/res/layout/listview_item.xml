<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#FF5534"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/trash" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Delete this record?"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:text="Delete it!"
            android:textColor="#FF5534" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:scaleType="centerInside"
        android:background="@drawable/timeline_default_tile_random_01"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mode"
            android:layout_width="50dp"
            android:scaleType="centerInside"
            swipe:srcCompat="@drawable/notes_mode_good_on"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/position"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Hover"
                android:alpha="1"
                android:text="Some memo here, or the review of the record" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"/>

                <ImageView
                    android:id="@+id/record_type"
                    android:layout_width="30dp"
                    android:scaleType="centerInside"
                    swipe:srcCompat="@drawable/notes_mode_good_on"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/record_weather"
                    android:layout_width="30dp"
                    android:scaleType="centerInside"
                    swipe:srcCompat="@drawable/notes_rainy_on"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>