<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10pt"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#a2ec8a"
                    android:layout_weight="1"
                    android:text="47" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="Service\n" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#456040"
                    android:layout_weight="1"
                    android:text="29" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="Smash\n" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#8dd1cf"
                    android:layout_weight="1"
                    android:text="21" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text=" Volée\n revers" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#7a91a6"
                    android:layout_weight="1"
                    android:text="28" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="  Volée\ncoup drt" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="188dp"
                android:layout_height="192dp"
                android:layout_marginTop="20pt"
                android:layout_gravity="top"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">
            <ImageView
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:scaleType="centerInside"
                android:src="@drawable/ic_coup"/>
            <ImageView
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:scaleType="centerInside"
                android:src="@drawable/notes_rainy_on"/>
                </LinearLayout>
            <ImageView
                android:layout_width="20pt"
                android:layout_height="20pt"

                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/notes_mode_best_on"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#efa17f"
                    android:layout_weight="1"
                    android:text="80" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="Coup droit\n      lifté" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#b22640"
                    android:layout_weight="1"
                    android:text="30" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="Coup droit\n     slicé" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#cb4369"
                    android:layout_weight="1"
                    android:text="49" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text=" Revers\n    lifé" />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_marginTop="5pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#a582cf"
                    android:layout_weight="1"
                    android:text="18" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="  Revers\n    slicé" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="10pt"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="Remarque: Je suis pas en forme aujourd'hui,il faut que moi repose plus avant d'entrainer." />
    </LinearLayout>
</LinearLayout>